<script>
let currentLang = 'de';
function switchLang() {
  if(currentLang === 'de') {
    document.getElementById('de-section').style.display = 'none';
    document.getElementById('en-section').style.display = 'block';
    document.getElementById('slogan').innerText = "Maximize Your Returns in Dubai ‚Äì Secure, Luxurious, Off-Plan Investments";
    document.querySelector('.lang-switch').innerText = 'DE';
    currentLang = 'en';
  } else {
    document.getElementById('de-section').style.display = 'block';
    document.getElementById('en-section').style.display = 'none';
    document.getElementById('slogan').innerText = "Maximiere deine Rendite in Dubai ‚Äì sichere, luxuri√∂se Off-Plan-Investments";
    document.querySelector('.lang-switch').innerText = 'EN';
    currentLang = 'de';
  }
}
</script>

